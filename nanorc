## ~/.nanorc

# enable auto-indentation
set autoindent

# bracket identification
set brackets ""')>]}"
set matchbrackets "(<[{)>]}"
set quotestr "^([ \t]*[#:>\|}])+"

# Detect word boundaries more accurately by treating punctuation characters  as parts of words.
set wordbounds

# cut from cursor to end of line
set cut

# punctuation identification
set punct "!.?"

# backup to directory
# set backupdir ~/.nano/nano_backups/

## Enable ~/.nano_history for saving and reading search/replace strings.
set historylog

# use bold text instead of reverse video
set boldtext

# remove blank line below titlebar
set morespace

# display cursor position
set const

# ennable mouse support
set mouse

# smooth scrolling
set smooth

# ennable undo
set undo

# ennable softwrapping of lines
set softwrap

# extended regular expression searches
set regexp

# do not display help at bottom of screen
unset nohelp

# remove status messages after 1 keystroke
set quickblank

# custom keybindings
bind ^u undo all
bind ^y uncut all

bind ^s whereis all

bind ^p prevpage all
bind ^n nextpage all

bind ^e end all
bind ^a home all

# dont report errors about syntax coloring
# helpful for portability of this file
set quiet
include /usr/local/Cellar/nano/2.2.6/share/nano/asm.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/awk.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/c.nanorc
