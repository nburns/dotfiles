include /usr/local/Cellar/nano/2.2.6/share/nano/css.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/debian.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/fortran.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/gentoo.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/groff.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/html.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/java.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/makefile.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/man.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/mgp.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/mutt.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/nanorc.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/objc.nanorc
include /usr/local/Cellar/nano/2.2.6/share/nano/ocaml.nanorc
