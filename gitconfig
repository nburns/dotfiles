[credential]
    helper = osxkeychain

[core]
    editor = vim
    excludesfile = ~/.gitignore_global

[push]
    default = current

[diff]
    algorithm = patience
    compactionHeuristic = true
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
    tool = mvimdiff

[rerere]
    enabled = true

[difftool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"

[alias]
    commti = commit
    dif = diff
    chekcout = checkout
    branches = !branches
    conflicted = !git-conflicted

[user]
    name = Nick Burns
    email = nick@burns.io

[pull]
    rebase = true

[branch "master"]
    pushRemote = no_pushy_for_you

[branch "main"]
    pushRemote = no_pushy_for_you

[init]
	defaultBranch = main
