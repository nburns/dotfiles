[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[push]
	default = current

[diff]
    algorithm = patience
    compactionHeuristic = true
    log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
    tool = mvimdiff
[rerere]
	enabled = true

[difftool "mvimdiff"]
    cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"

[alias]
	commti = commit
	chekcout = checkout
	branches = !branches
	conflicted = !git-conflicted
