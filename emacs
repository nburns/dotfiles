;; Highlight current line
(global-hl-line-mode 1)

;; Set indent size
(setq standard-indent 4)

;; Enable mouse scroll
(mouse-wheel-mode t)

;; Don't backup
(setq make-backup-files nil)

;; Show line and column numbers
(setq-default fill-column 72)

;; Enable soft line wrapping
(setq auto-fill-mode 1)


